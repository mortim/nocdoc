                {}
                </ul>

                <ul id=\"sidebar2\">
                {}
                </ul>
            </div>
            
            <div id=\"docs\"> 
            {}
            </div>
        </div>
    </div>
</body>
</html>
    " swap format
}

def generateModule = {
    3 -1 rotNM unquote
    5 -1 rotNM pop
    4 -1 rotNM pop
    3 -1 rotNM pop
    swap pop

    header

    swap dup ".html" cat
    4 1 rotNM

    # Output all docstring functions
    3 -1 rotNM dup htmlFunctions

    swap nameFunctions "<h3 class=\"section-title\">Functions</h3>" swap cat swap 

    4 -1 rotNM
    3 1 rotNM 

    # type of page printed in the html
    "module"

    html write
}

def generateHomePage = {
    unquote

    header
    
    5 -1 rotNM dup 
    ".html" cat swap
    6 2 rotNM

    4 1 rotNM

    3 -1 rotNM swap

    dup quote swap quote
    3 -1 rotNM quote 3 1 rotNM 

    cat cat

    "<h3 class=\"section-title\">Details</h3><li><b>Author:</b> {}</li><li><b>Git repos: </b><a href=\"{}\">{}</a></li>" swap

    format swap

    # type of page printed in the html
    "library"

    html write
}
